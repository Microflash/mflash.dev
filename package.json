{
  "name": "microflash",
  "version": "0.15.0",
  "private": true,
  "description": "Reflections on design and development by Naiyer Asif",
  "repository": "https://github.com/Microflash/site.git",
  "author": "Naiyer Asif",
  "license": "MIT",
  "scripts": {
    "build": "gridsome build",
    "start": "gridsome develop",
    "status": "gridsome info",
    "purge": "shx rm -rf public .cache src/.temp static/search.json",
    "post": "node bin/content.js",
    "sprite": "npm run sprite:backup && npm run sprite:build",
    "sprite:backup": "shx cp static/assets/images/icons.svg .gitlab/dist/icons.svg",
    "sprite:build": "spritely --input .gitlab/design/icons --output static/assets/images/icons.svg --prefix \"icon-\""
  },
  "dependencies": {
    "@gridsome/plugin-sitemap": "^0.4.0",
    "@gridsome/source-filesystem": "^0.6.2",
    "@gridsome/transformer-remark": "^0.6.4",
    "@microflash/gridsome-plugin-feed": "^1.2.2",
    "@noxify/gridsome-plugin-remark-embed": "^1.3.1",
    "axios": "^0.21.1",
    "gridsome": "^0.7.23",
    "gridsome-plugin-remark-prismjs-all": "^0.4.8",
    "gridsome-remark-figure-caption": "^1.2.0",
    "remark-admonitions": "^1.2.1",
    "vue-fuse": "^2.2.1"
  },
  "devDependencies": {
    "@microflash/spritely": "^1.3.3",
    "@sindresorhus/slugify": "^2.1.0",
    "autoprefixer": "^9.8.6",
    "chrono-node": "^2.3.1",
    "commander": "^8.1.0",
    "dayjs": "^1.10.6",
    "marked": "^2.1.3",
    "sass": "^1.38.2",
    "sass-loader": "^10.2.0",
    "shx": "^0.3.3",
    "svg-to-vue-component": "^0.3.8"
  }
}
